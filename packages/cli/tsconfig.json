{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./built",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "types/*"],
  "exclude": ["**/node_modules", "src/html"],
  "ts-node": {
    "swc": true
  }
}
