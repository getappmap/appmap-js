{
  "name": "@appland/scanner",
  "version": "1.88.0",
  "description": "Analyze AppMaps for code flaws",
  "bin": "built/cli.js",
  "main": "built/index.js",
  "files": [
    "built",
    "doc"
  ],
  "types": "built/index.d.ts",
  "scripts": {
    "build": "node bin/preBuild.js && tsc -p tsconfig.build.json && yarn schema && yarn doc",
    "build-native": "yarn build && ./bin/build-native",
    "start": "ts-node src/cli.ts",
    "doc": "ts-node ./bin/verify-rules-doc.ts && ts-node ./bin/verify-labels-doc.ts && ts-node ./bin/front-matter.ts",
    "schema": "ts-node ./bin/schema.ts",
    "schema-up-to-date": "git diff --exit-code src/configuration/schema/options.json",
    "doc-up-to-date": "git diff --exit-code doc/",
    "lint": "eslint src --ext .ts",
    "ci": "yarn lint && yarn build && yarn schema-up-to-date && yarn doc-up-to-date && yarn test",
    "test": "yarn jest",
    "jest": "jest --filter=./test/testFilter.js --detectOpenHandles",
    "semantic-release": "semantic-release",
    "watch": "node bin/preBuild.js && tsc -p tsconfig.build.json --watch"
  },
  "author": "AppLand, Inc.",
  "license": "Commons Clause + MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/async": "^3.2.12",
    "@types/crypto-js": "^4.1.1",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.4.1",
    "@types/js-yaml": "^4.0.3",
    "@types/lru-cache": "^5.1.1",
    "@types/node": "^16.7.10",
    "@types/sinon": "^10.0.11",
    "@types/tar-stream": "^2.2.2",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "fs-extra": "^10.1.0",
    "jest": "^29.5.0",
    "nock": "^13.2.2",
    "openapi-types": "^9.3.0",
    "pkg": "^5.8.0",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.2",
    "sinon": "^13.0.1",
    "tmp-promise": "^3.0.3",
    "ts-jest": "^29.0.5",
    "ts-json-schema-generator": "^0.97.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@appland/client": "^1.12.0",
    "@appland/models": "workspace:^2.10.0",
    "@appland/openapi": "workspace:^1.7.0",
    "@appland/sql-parser": "^1.5.0",
    "@types/cli-progress": "^3.9.2",
    "ajv": "^8.8.2",
    "applicationinsights": "^2.1.4",
    "async": "^3.2.4",
    "boxen": "^5.0.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.1",
    "cli-progress": "^3.12.0",
    "conf": "10.2.0",
    "crypto-js": "^4.0.0",
    "glob": "7.2.3",
    "inquirer": "^8.1.2",
    "js-yaml": "^4.1.0",
    "lru-cache": "^6.0.0",
    "minimatch": "^5.1.2",
    "octokit": "^2.0.19",
    "openapi-diff": "^0.23.6",
    "ora": "~5",
    "pretty-format": "^27.4.6",
    "read-pkg-up": "^7.0.1",
    "supports-hyperlinks": "^2.2.0",
    "tar-stream": "^2.2.0",
    "yargs": "^17.1.1"
  },
  "engines": {
    "node": ">15"
  },
  "publishConfig": {
    "access": "public"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "scripts": [
      "built/scanner/*.js",
      "built/rules/**/*.js"
    ],
    "assets": [
      "built/sampleConfig/*.yml",
      "built/**/*.json",
      "package.json",
      "doc/**/*.md"
    ],
    "outputPath": "dist"
  }
}
